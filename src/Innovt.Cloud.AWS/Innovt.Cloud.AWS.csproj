<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <PackageId>Innovt.Cloud.AWS</PackageId>
        <PackageVersion>8.2.0</PackageVersion>
        <Authors>Michel Borges</Authors>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <Copyright>Innovt Tecnologia</Copyright>
        <Description>AWS implementation for cloud features.</Description>
        <LangVersion>latest</LangVersion>
        <AnalysisMode>AllEnabledByDefault</AnalysisMode>
        <ClsCompliant>true</ClsCompliant>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="AWSSDK.Core" Version="4.0.0.5" />
        <PackageReference Include="AWSSDK.SecurityToken" Version="4.0.0.4" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="9.0.5" />
        <PackageReference Include="Polly" Version="8.5.2" />
        <PackageReference Include="System.Text.Json" Version="9.0.5" />
        <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="9.0.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\Innovt.Core\Innovt.Core.csproj"/>
        <ProjectReference Include="..\Innovt.Cloud\Innovt.Cloud.csproj"/>
        <ProjectReference Include="..\Innovt.Notification.Core\Innovt.Notification.Core.csproj"/>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Update="NETStandard.Library" Version="2.0.3"/>
    </ItemGroup>

</Project>
